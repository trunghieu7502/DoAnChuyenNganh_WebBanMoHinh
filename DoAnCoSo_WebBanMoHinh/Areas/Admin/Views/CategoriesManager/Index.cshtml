@model IEnumerable<DoAnCoSo_WebBanMoHinh.Models.Category>

@{
    ViewData["Title"] = "Loại";
}

<h1 class="text-center mt-4">DANH SÁCH LOẠI SẢN PHẨM</h1>

<div>
    <a asp-action="Create">
        <button class="btn btn-primary">Tạo Loại Mới</button>
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CateName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CateName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <button class="btn btn-warning">Sửa</button>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <button class="btn btn-primary">Chi Tiết</button>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <button class="btn btn-danger">Xóa</button>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>