@model DoAnCoSo_WebBanMoHinh.Models.Category

@{
    ViewData["Title"] = "Sửa Loại";
}

<h4 class="mt-4 text-center">Sửa Thông Tin Loại Sản Phẩm</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="CateName" class="form-label fw-bold">Tên Loại</label>
                <input asp-for="CateName" class="form-control" placeholder="Nhập tên loại..." />
                <span asp-validation-for="CateName" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu
                </button>
                <a asp-area="Admin" asp-controller="CategoriesManager" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Trở Về
                </a>
            </div>
        </form>
    </div>
</div>
