@model DoAnCoSo_WebBanMoHinh.Models.Category

@{
    ViewData["Title"] = "Xóa Loại";
}

<div class="container">
    <h3 class="mt-4 text-center text-danger">Bạn có thực sự muốn xóa loại sản phẩm này?</h3>
    <hr />
    <dl class="row justify-content-center">
        <dt class="col-sm-3 fw-bold">
            Tên Loại:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CateName)
        </dd>
    </dl>
    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt"></i> Xóa
        </button>
        <a asp-area="Admin" asp-controller="CategoriesManager" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Trở Về
        </a>
    </form>
</div>