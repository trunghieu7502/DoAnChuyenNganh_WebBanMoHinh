@model DoAnCoSo_WebBanMoHinh.Models.Company

@{
    ViewData["Title"] = "Sửa Hãng";
}

<div class="container">
    <h4 class="mt-4 text-center">Sửa Thông Tin Hãng</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="CompName" class="form-label fw-bold">Tên Hãng</label>
                    <input asp-for="CompName" class="form-control" placeholder="Nhập tên hãng..." />
                    <span asp-validation-for="CompName" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-area="Admin" asp-controller="CompaniesManager" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Trở Về
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>