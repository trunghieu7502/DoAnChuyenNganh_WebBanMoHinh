@model DoAnCoSo_WebBanMoHinh.Models.Coupons

@{
    ViewData["Title"] = "Tạo Coupon";
}

<div class="container mt-5">
    <h2 class="text-center">Tạo Coupon Mới</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
                <div class="form-group mb-3">
                    <label for="Code" class="form-label fw-bold">Mã Coupon</label>
                    <input type="text" class="form-control" id="Code" name="Code" placeholder="Nhập mã coupon..." required />
                </div>
                <div class="form-group mb-3">
                    <label for="DiscountAmount" class="form-label fw-bold">Số Tiền Giảm Giá</label>
                    <input type="number" class="form-control" id="DiscountAmount" name="DiscountAmount" placeholder="Nhập số tiền giảm giá..." required />
                </div>
                <div class="form-group mb-3">
                    <label for="PointsRequired" class="form-label fw-bold">Điểm Yêu Cầu</label>
                    <input type="number" class="form-control" id="PointsRequired" name="PointsRequired" placeholder="Nhập điểm yêu cầu..." required />
                </div>
                <div class="form-group mb-3">
                    <label for="ExpirationDate" class="form-label fw-bold">Hạn Sử Dụng</label>
                    <input type="date" class="form-control" id="ExpirationDate" name="ExpirationDate" required />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Tạo Coupon
                    </button>
                    <a asp-area="Admin" asp-controller="CouponsManager" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Trở Về
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
