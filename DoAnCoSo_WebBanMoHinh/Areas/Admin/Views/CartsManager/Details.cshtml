@model DoAnCoSo_WebBanMoHinh.Models.Order

@{
    string pname = Model.OrderDate.ToString();
    ViewData["Title"] = $"{pname} - Admin";
}

<h1 class="mt-2">CHI TIẾT ĐƠN HÀNG</h1>

<div>
    <h4 class="mt-4">CHI TIẾT - @Html.DisplayFor(model => model.OrderDate)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            Ngày Đặt:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            Tổng Giá:
        </dt>
        <dd class = "col-sm-10">
            @string.Format("{0:0,0}", Model.TotalPrice) VNĐ
        </dd>
        <dt class = "col-sm-2">
            Địa Chỉ Giao Hàng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippingAddress)
        </dd>
        <dt class = "col-sm-2">
            Thành Phố:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Quận / Huyện:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.District)
        </dd>
        <dt class = "col-sm-2">
            Phường / Xã:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ward)
        </dd>
        <dt class = "col-sm-2">
            Phương Thức Thanh Toán:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>
        <dt class = "col-sm-2">
            Ghi Chú:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            Tình Trạng Giao Hàng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDone)
        </dd>
    </dl>
</div>
<div>
    <a asp-area="Admin" asp-controller="CartsManager" asp-action="Index">
        <button class="btn btn-outline-dark flex-shrink-0" type="button">
            Trở Về
        </button>
    </a>
</div>