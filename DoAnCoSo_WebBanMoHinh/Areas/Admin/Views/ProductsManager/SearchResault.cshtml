@model IEnumerable<DoAnCoSo_WebBanMoHinh.Models.Product>

@{
    ViewData["Title"] = "Kết Quả Tìm Kiếm";
}

<section class="py-4">
    @if (!Model.Any())
    {
        <div class="alert alert-danger text-center" role="alert">
            <h3>Không tìm thấy sản phẩm nào với từ khóa trên</h3>
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <h4 class="text-left">Tìm thấy @Model.Count() sản phẩm:</h4>
        </div>
        <div class="container px-4 px-lg-5 mt-4">
            <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-3 row-cols-lg-4 justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col mb-4">
                        <div class="card shadow-sm h-100">
                            <a asp-controller="ProductsManager" asp-action="Details" asp-route-id="@item.Id">
                                <img src="@item.ImageUrl" class="card-img-top rounded-top" alt="Hình ảnh sản phẩm" style="height: 200px; object-fit: cover;">
                            </a>
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="card-text">
                                    <span class="fw-bold">Giá:</span> @item.Price.ToString("#,##0") VNĐ
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</section>