@model DoAnCoSo_WebBanMoHinh.Models.Product

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
}

<div class="container">
    <h4 class="mt-4 text-center text-danger">Bạn có thực sự muốn xóa sản phẩm này?</h4>
    <hr />
    <dl class="row justify-content-center">
        <dt class="col-sm-3 fw-bold">Tên Sản Phẩm:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-3 fw-bold">Giá:</dt>
        <dd class="col-sm-9">@Model.Price.ToString("#,##0") VNĐ</dd>
        <dt class="col-sm-3 fw-bold">Mô Tả:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-3 fw-bold">Trạng Thái:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        <dt class="col-sm-3 fw-bold">Ảnh Chính:</dt>
        <dd class="col-sm-9">
            <img src="@Model.ImageUrl" class="rounded shadow-sm" style="height: 150px; width: auto;">
        </dd>
        <dt class="col-sm-3 fw-bold">Hãng:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Company.CompName)</dd>
        <dt class="col-sm-3 fw-bold">Loại:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CateName)</dd>
    </dl>
    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt"></i> Xóa
        </button>
        <a asp-area="Admin" asp-controller="ProductsManager" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Trở Về
        </a>
    </form>
</div>